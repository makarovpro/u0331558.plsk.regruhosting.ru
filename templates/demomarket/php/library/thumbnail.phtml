<?php
/**
 * Уменьшенное изображение.
 *
 * @var umiTemplaterPHP|ViewPhpExtension|DemomarketPhpExtension $this
 * @var array $variables
 */

$thumbnail = $this->getThumbnail($variables);
$canShowEIP = $thumbnail['field_name'] && $thumbnail['id'];
?>

<img
	class="img-responsive"
	src="<?= $thumbnail['src'] ?>"
	alt="<?= $this->escape($thumbnail['alt']) ?>"
	title="<?= $this->escape($thumbnail['title']) ?>"
	width="<?= $thumbnail['width'] ?>"
	height="<?= $thumbnail['height'] ?>"
	<?php if ($canShowEIP): ?>
		<?= $this->getUmiIdAttributeName($thumbnail['object']) . '="' . $thumbnail['id'] . '"' ?>
		<?= !$thumbnail['object'] ? 'umi:object-id="' . $thumbnail['object-id'] . '"' : '' ?>
		<?= $thumbnail['folderHash'] ? 'umi:folder-hash="' . $thumbnail['folderHash'] . '"' : '' ?>
		<?= $thumbnail['fileHash'] ? 'umi:file-hash="' . $thumbnail['fileHash'] . '"' : '' ?>
		<?= 'umi:field-name="' . $thumbnail['field_name'] . '" ' ?>
	<?php endif; ?>
/>
